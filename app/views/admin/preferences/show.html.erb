<h2>Preferences</h2>

<%= form_for [:admin, @preferences] do |f| %>
  <%= f.label :artist_sort_order %>
  <%= f.collection_radio_buttons :artist_sort_order, @preferences.asc_desc, :first, :last %><br>
  <%= f.label :song_sort_order %>
  <%= f.collection_radio_buttons :song_sort_order, @preferences.asc_desc, :first, :last %><br>
  <%= f.label :allow_create_artists %>
  <%= f.collection_radio_buttons :allow_create_artists, @preferences.yes_no, :first, :last %><br>
  <%= f.label :allow_create_songs %>
  <%= f.collection_radio_buttons :allow_create_songs, @preferences.yes_no, :first, :last %><br>

  <%= f.submit %>
<% end %>
